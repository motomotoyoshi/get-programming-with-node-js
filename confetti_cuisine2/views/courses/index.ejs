<h2 class="center">Courses Table</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% courses.forEach(course => { %> 
            <tr>
                <td>
                    <a href="<%= `/courses/${course._id}` %>">
                        <%= course.name %> 
                    </a>
                </td>
                <td><%= course.email %> </td>
                <td>
                    <a href="<%= `/courses/${course._id}/edit` %>">
                        Edit
                    </a>
                </td>
                <td>
                    <a href="<%= `/courses/${course._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure yout want to delete this recored?')">
                        Delete
                    </a>
                </td>
            </tr>
            <% }); %> 
        </tbody>
    </table>